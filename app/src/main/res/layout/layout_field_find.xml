<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/common_margin"
    android:layout_marginTop="@dimen/common_half_margin"
    android:layout_marginEnd="@dimen/common_margin"
    android:layout_marginBottom="@dimen/common_half_margin"
    app:cardCornerRadius="@dimen/common_half_size"
    app:cardBackgroundColor="?attr/colorCardBackground"
    >
    <ru.atomofiron.regextool.view.custom.RegexText
        android:id="@+id/regex_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:inputType="textNoSuggestions"
        android:paddingStart="@dimen/common_margin"
        android:paddingEnd="64dp"
        android:hint="@string/find"
        android:background="@color/transparent"
        />
    <ImageButton
        android:layout_width="@dimen/common_size"
        android:layout_height="@dimen/common_size"
        android:background="@drawable/bg_transparent_ripple"
        android:src="@drawable/ic_find"
        android:layout_gravity="end"
        />
    <include
        layout="@layout/layout_field_replace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size"
        />
</androidx.cardview.widget.CardView>