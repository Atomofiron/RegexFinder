<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/explorer_dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/explorer_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/joystick_size"
            android:overScrollMode="never"
            />
        <ru.atomofiron.regextool.custom.view.FixedBottomAppBar
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_tab_bar_height"
            android:layout_gravity="bottom"
            >
            <ru.atomofiron.regextool.custom.view.BottomMenuBar
                android:id="@+id/explorer_bom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:menu="@menu/nav_explorer"
                />
        </ru.atomofiron.regextool.custom.view.FixedBottomAppBar>
        <ru.atomofiron.regextool.custom.view.bottom_sheet.BottomSheetView
            android:id="@+id/explorer_bsv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <ru.atomofiron.regextool.custom.view.VerticalDockView
        android:id="@+id/explorer_dv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?attr/colorBackground"
        android:layout_gravity="start"
        app:title="@string/places"
        />
</androidx.drawerlayout.widget.DrawerLayout>