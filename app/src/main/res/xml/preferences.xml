<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        app:title="@string/settings">
        <EditTextPreference
            app:title="@string/pref_storage_path"
            app:key="pref_storage_path"
            />
        <EditTextPreference
            app:title="@string/pref_extra_formats"
            app:key="pref_extra_formats"
            />
        <ListPreference
            app:title="@string/pref_orientation"
            app:key="pref_orientation"
            app:entries="@array/orientation_var"
            app:entryValues="@array/orientation_var"
            />
    </PreferenceCategory>
</PreferenceScreen>